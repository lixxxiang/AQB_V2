<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cgwx.yyfwptz.lixiang.aqb.view.activity.LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/front"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="85dp"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全宝"
        android:textSize="18dp"
        android:textColor="#ff9801"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_marginBottom="74dp"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="238dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/getVcode"
        android:layout_alignLeft="@+id/getVcode"
        android:layout_alignStart="@+id/getVcode" />

    <Button
        android:id="@+id/getVcode"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gray"
        android:text="获取验证码"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="279dp"
        android:layout_above="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="236dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长光卫星出品"
        android:textColor="#b5b5b5"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="531dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <EditText
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:ems="11"
        android:textSize="14dp"
        android:textColor="#b5b5b5"
        android:hint="手机号(请输入大陆手机号)"
        android:background="@null"
        android:textCursorDrawable="@null"
        />


</RelativeLayout>
